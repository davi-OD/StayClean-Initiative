extends layout 
block content 
    header.card-header  
        h4.card-title Welcome 
    .form-row 
        .col.form-group.col-md-12 
            .form-row 
                .col-md-10 
                    p Employee #{person.employeeName}
    .form-row 
        img(src="/"+person.imageUpload)
    form(method="post" action="/employee/update?id="+person._id)
        table.table 
            thead.thead-dark 
                tr 
                    th Employee Name 
                    td 
                        input.form-control(value = person.employeeName  name="employeeName")
                tr  
                    th NIN 
                    td 
                        input.form-control(value = person.nin name ="nin")
                tr 
                    th Gender 
                        td 
                            label Male&nbsp
                            input(value= "male" type="radio" checked = person.gender==="male" name="gender")
                            label Female&nbsp
                            input(value= "female" type="radio" checked = person.gender==="female" name="gender")
                tr           
                    th  Role
                    td  
                        select.form-control(name="role")
                            option(value="driver" selected = person.role === "driver") Driver 
                            option(value="conductor" selected = person.role === "conductor") Conductor 
                tr  
                    td(colspan=2)
                        button.btn.btn-dark.btn-block(type="submit") Update             



